<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.starunion.collapselayout.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.starunion.collapselayout.CollapseLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/collapseLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_weight="1"
        app:CollapseLayout_pileWidth="6dp"
        app:CollapseLayout_anchor_width="40dp"
        app:CollapseLayout_collapse_count="3"
        app:CollapseLayout_total_count="5"/>

</android.support.constraint.ConstraintLayout>
